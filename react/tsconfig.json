{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "lib": ["DOM", "ES2020"],
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "rootDir": "src",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react",
      "types": ["react", "react-dom"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["dist", "node_modules"]
  }